<%= content_tag(:div, class: "show-poll-wrapper") do %>
  <%= content_tag(:h2, 'Poll Details', class: "themed-text") %>
  <% if user_voted?(@poll) %>
    <%= render partial: 'poll_results', locals: { poll: @poll } %>
  <% else %>
    <%= render partial: 'poll_vote', locals: { poll: @poll } %>
  <% end %>
  <% if @poll.owner != current_user %>
    <%= content_tag(:div, class: "report-poll") do %>
      <%= link_to(report_poll_path(@poll.id)) do %>
        <%= ion_icon 'ios-flag', text: content_tag(:span, "Report") %>
      <% end %>
    <% end -%>
  <% end %>
<% end %>
