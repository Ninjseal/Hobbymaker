<%= content_tag(:div, class: "content-box") do %>
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <%= content_tag(:fieldset) do %>
      <div class="field">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, class: "w-100", autofocus: true, required: true, minlength: @minimum_password_length %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, class: "w-100", required: true %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Change my password" %>
      </div>
    <% end -%>
  <% end %>
<% end -%>
