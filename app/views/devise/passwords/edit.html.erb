<%= render partial: "devise/shared/alerts" %>
<%= content_tag(:div, class: "content-box") do %>
  <%= content_tag(:h2, 'Change your password', class: "themed-text") %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <%= content_tag(:fieldset) do %>
      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if resource.errors.full_messages_for(:password).present? %>
          <%= f.password_field :password, class: "w-100 form-control is-invalid", required: true, minlength: @minimum_password_length %>
          <%= content_tag(:div, resource.errors.full_messages_for(:password).join(".\n"), class: "invalid-feedback") %>
        <% else %>
          <%= f.password_field :password, class: "w-100", required: true, minlength: @minimum_password_length %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <% if resource.errors.full_messages_for(:password_confirmation).present? %>
          <%= f.password_field :password_confirmation, class: "w-100 form-control is-invalid", required: true, minlength: @minimum_password_length %>
          <%= content_tag(:div, resource.errors.full_messages_for(:password_confirmation).join(".\n"), class: "invalid-feedback") %>
        <% else %>
          <%= f.password_field :password_confirmation, class: "w-100", required: true, minlength: @minimum_password_length %>
        <% end %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Change my password", class: "submit-button-lg" %>
      </div>
    <% end -%>
  <% end %>
<% end -%>
