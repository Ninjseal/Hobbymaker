<%= content_tag(:div, class: "content-box") do %>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= content_tag(:fieldset) do %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "w-100", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "w-100", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "w-100", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "w-100", autocomplete: "new-password" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Sign up", class: "submit-button-lg" %>
        <%= content_tag(:span, class: "ml-2") do %>
          Already a member?
          <%= link_to "Log in", new_session_path(resource_name) %><br />
        <% end -%>
      </div>
    <% end -%>
  <% end %>
<% end -%>
