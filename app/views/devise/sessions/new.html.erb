<%= render partial: "devise/shared/alerts" %>
<%= content_tag(:div, class: "content-box") do %>
  <%= content_tag(:h2, 'Log in', class: "themed-text") %>
  <%= link_to user_google_oauth2_omniauth_authorize_path do %>
   <%= button_tag(type: "button", class: "btn btn-google btn-danger") do %>
     <%= ion_icon 'social-googleplus-outline', text: content_tag(:span, "Continue with Google"), class: "mr-1" %>
   <% end %>
  <% end %>
  <%= content_tag(:p, class: "gradient") do %>
    <%= content_tag(:span, 'or') %>
  <% end %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= content_tag(:fieldset) do %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "w-100", autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "w-100", required: true %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "submit-button-lg" %>
        <%= link_to "Forgot password", new_password_path(resource_name), class: "ml-2" %>
      </div>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "mt-3") do %>
    Not a member?
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  <% end -%>
<% end -%>
